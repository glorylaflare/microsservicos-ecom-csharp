{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Auth0": {
    "Domain": "dev-0pvcfsspjbfytrpt.us.auth0.com",
    "Audience": "https://auth0_api"
  },
  "ReverseProxy": {
    "Routes": {
      "order_route": {
        "ClusterId": "order_cluster",
        "Match": {
          "Path": "/order/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/order" }
        ],
        "AuthorizationPolicy": "AuthenticateUser"
      },
      "stock_route": {
        "ClusterId": "stock_cluster",
        "Match": {
          "Path": "/stock/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/stock" }
        ],
        "AuthorizationPolicy": "AuthenticateUser"
      },
      "user_route": {
        "ClusterId": "user_cluster",
        "Match": {
          "Path": "/user/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/user" }
        ],
        "AuthorizationPolicy": "AuthenticateUser"
      },
      "auth_route": {
        "ClusterId": "auth_cluster",
        "Match": {
          "Path": "/auth/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/auth" }
        ],
        "AuthorizationPolicy": "AllowAnonymous"
      }
    },
    "Clusters": {
      "order_cluster": {
        "Destinations": {
          "order_destination": {
            "Address": "http://localhost:5001"
          }
        }
      },
      "stock_cluster": {
        "Destinations": {
          "stock_destination": {
            "Address": "http://localhost:5002"
          }
        }
      },
      "user_cluster": {
        "Destinations": {
          "user_destination": {
            "Address": "http://localhost:5003"
          }
        }
      },
      "auth_cluster": {
        "Destinations": {
          "auth_destination": {
            "Address": "http://localhost:5004"
          }
        }
      }
    }
  }
}
